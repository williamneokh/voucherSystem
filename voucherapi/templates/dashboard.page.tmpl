{{template "base" .}}

{{define "content"}}
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Admin Dashboard</h1>
            <h5 class="h5">Fund Balance: {{index .StringMap "balance"}}</h5>
        </div>


        <div class="container">
            <div class="col">
            <h2>Recent Created Voucher</h2><br>

            <table class="table table-striped">
                <thead>
                <tr>

                    <th>Voucher VID</th>
                    <th>Created Date:Time</th>
                    <th>Value</th>
                    <th>User</th>


                </tr>
                </thead>
                <tbody>

                {{$res := index .Data "created"}}

                {{range $res}}

                    <tr>
                        <td>{{.VID}}</td>
                        <td>{{.CreatedDate}}</td>
                        <td>${{.VoucherValue}}</td>
                        <td>{{.UserID}}</td>

                    </tr>

                {{end}}

                </tbody>
            </table>


        </div>


<br>

            <div class="col">

                <h2>Recent Used Voucher</h2><br>

                <table class="table table-striped">
                    <thead>
                    <tr>

                        <th>Voucher VID</th>
                        <th>Spend Date:Time</th>
                        <th>Value</th>
                        <th>Branch Code</th>


                    </tr>
                    </thead>
                    <tbody>

                    {{$res2 := index .Data "used"}}

                    {{range $res2}}

                        <tr>

                            <td>{{.VID}}</td>
                            <td>{{.RedeemedDate}}</td>
                            <td>${{.VoucherValue}}</td>
                            <td>{{.Branch}}</td>

                        </tr>

                    {{end}}

                    </tbody>
                </table>


            </div>
        </div>
    </main>
{{end}}